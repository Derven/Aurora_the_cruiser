macro "macro"
	elem 
		name = "TAB"
		command = ".winset \"mainwindow.macro=hotkeymode hotkey_toggle.is-checked=true mapwindow.map.focus=true input.background-color=#F0F0F0\""
	elem "ne"
		name = "NORTHEAST+REP"
		command = ".north"
	elem "se"
		name = "SOUTHEAST+REP"
		command = ".east"
	elem "sw"
		name = "SOUTHWEST+REP"
		command = ".south"
	elem "nw"
		name = "NORTHWEST+REP"
		command = ".west"
	elem "w"
		name = "WEST+REP"
		command = ".southwest"
	elem "n"
		name = "NORTH+REP"
		command = ".northwest"
	elem "e"
		name = "EAST+REP"
		command = ".northeast"
	elem "s"
		name = "SOUTH+REP"
		command = ".southeast"

macro "hotkeymode"
	elem 
		name = "TAB"
		command = ".winset \"mainwindow.macro=macro hotkey_toggle.is-checked=false input.focus=true input.background-color=#D3B5B5\""


menu "menu"
	elem 
		name = "&Icons"
		command = ""
		saved-params = "is-checked"
	elem "stretch"
		name = "&Stretch to fit"
		command = ".winset \"mapwindow.map.icon-size=0\""
		category = "&Icons"
		can-check = true
		group = "size"
		saved-params = "is-checked"
	elem "icon64"
		name = "&64x64 (2x)"
		command = ".winset \"mapwindow.map.icon-size=64\""
		category = "&Icons"
		is-checked = true
		can-check = true
		group = "size"
		saved-params = "is-checked"
	elem "icon32"
		name = "&32x32"
		command = ".winset \"mapwindow.map.icon-size=32\""
		category = "&Icons"
		can-check = true
		group = "size"
		saved-params = "is-checked"
	elem "textmode"
		name = "&Text"
		command = ".winset \"menu.textmode.is-checked=true?mapwindow.map.text-mode=true:mapwindow.map.text-mode=false\""
		category = "&Icons"
		can-check = true
		saved-params = "is-checked"


